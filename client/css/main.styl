body
  font-family 'Open Sans', sans-serif

h2
  font-weight 300

.align
  max-width 900px
  margin 0 auto

.editor
  &::before
    background linear-gradient(160deg, #02CCBA 0%, #AA7ECD 100%)
    content ''
    transform-origin left bottom
    // transform: skew(0deg, -15deg)
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    z-index -9999
  &__title
    color white
    text-align center
  &__elements
    border-radius 6px
    display flex
    justify-content space-around
    box-shadow 12px 15px 20px 0px rgba(46,61,73,0.37)
    background-color white
  .editor-form,
  .editor-html    
    padding 2em
    flex 1
  .editor-form
    textarea
      min-height 500px
      width 100%